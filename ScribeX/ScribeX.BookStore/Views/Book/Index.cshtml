@model List<Book>;


<p>@ViewBag.UserName</p>
<section class="main">
    <div class="row home-border mt-3 bg-white p-5">
        <div class="col-md-6 text-center">
            <div class="home">
                <h1>Welcome to ScribeBX</h1>
                <p>A Place to get & share knowledge</p>
                <a href="/Book/AllBooks" class="btn btn-outline-primary">Get More</a>
            </div>
        </div>
        <div class="col-md-6 home-image-border">
            <img class="img-thumbnail border-0" src="~/images/thumbnail.png" />
        </div>
    </div>
</section>
<section class="main py-4">
    <div class="row">
        <p class="h6 p-0">Top Books</p>
        @{
            int i = 1;
        }
        @foreach (var book in Model)
        {
            if (i > 8)
                break;
            <div class="col-md-3 mb-3">
                <div class="card book-card">
                    <img src="~/images/@book.ImageName" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@book.Title</h5>
                        <p class="card-text">@book.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span>₹ @book.Price</span>
                            <a href="/Book/BookDetails/@book.Id" class="btn btn-sm btn-warning text-light">View</a>
                        </div>
                    </div>
                </div>
            </div>
            i++;
        }
    </div>
</section>